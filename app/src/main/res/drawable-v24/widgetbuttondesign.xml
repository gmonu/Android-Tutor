<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface" />
            <stroke
                android:width="5dp"
                android:color="@color/IndianRed">
            </stroke>
            <corners
                android:radius="40dp"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/shortTag" />
            <stroke
                android:width="1dp"
                android:color="@color/shortTag">
            </stroke>
            <corners
                android:radius="80dp"/>
        </shape>
    </item>
</selector>